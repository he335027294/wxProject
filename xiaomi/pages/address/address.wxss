/* pages/address/address.wxss */
page{
  background-color: #fed;
}
.uname{
  font-size:20px;
  font-weight:600;
}
.address{
  margin-top:30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding:20rpx;
}
.address-input{
  border:1px solid #aaa;
  padding:20rpx;
  height:200rpx;
  border-radius:8rpx;
}
.tip{
  font-size:18px;
  font-weight:600;
  margin-top:30rpx;
}
.tip2{
  color:#999;
  margin-bottom:24rpx;
}
.submit{
  border-radius: 0;
  position:fixed;
  bottom:0px;
  left:0px;
  width:100%;
  height:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  background-color: #2a1;
  color:#fff;
  font-size:20px;
}