.good-img{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#fff;

}
/*good-total*/
.good-title{
  font-size:18px;
  padding-bottom:10rpx;
}
.good-info{
  color:#666;
  font-size:14px;
  padding-bottom:10rpx;
}
.good-price{
  color:#d11;
  font-size:18px;
  font-weight: 600;
}

/*数量按钮*/
.tui-number-group{
  display:table;
  table-layout: fixed;
  width:300rpx;
  text-align: center;
  border-radius: 6rpx;
  overflow: hidden;
  border:1px solid #bbb;
}
.tui-number-cell{
   display: table-cell;
   line-height: 1.7;
   border-radius: 0;
}
button::after{
  border-bottom: none;
  border-top:none;
  border-radius: 0;
}
/*cell-item*/
.mycellitem{
  display:flex;
  font-size:14px;
}
.mycellitem .text-before{
  color:#666;
}
.mycellitem .activity{
  color:#f00;
}
/*bottom-fix*/
.bottom-fix{
  position:fixed;
  bottom:0px;
  left:0px;
  width:100%;
  height:120rpx;
  background-color:#fff;
  display:flex;
  justify-content: flex-end;
  align-items: center;
}
.bottom-fix>.btn{
  display:flex;
  justify-content: center;
  align-items: center;
  padding:20rpx;
  margin:10rpx;
  border-radius:10rpx;
  color:#fff;
}
.bottom-fix>.btn-buy{
  background-color:rgb(179,11,8);
  margin-right:20rpx;
}
.bottom-fix>.btn-collect{
  background-color:rgb(170,140,90);
}
.bottom-fix>.toShopping{
  background-color:#875f3f;
  position:absolute;
  top:10rpx;
  left:20rpx;
}
.bottom-block{
  height:120rpx;
  width:100%;
}