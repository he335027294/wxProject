/* pages/shopping/shopping.wxss */
page{
  background-color:rgb(250,250,250)
}
.empty{
  width:100%;
  height:300rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  background-color:rgb(250,250,250);
}
.cell{
  padding:20rpx;
  display:flex;
  flex-flow:row nowrap;
  justify-content: center;
  align-items: center;
}
.shop-good{
  display:flex;
  justify-content: space-between
}
.shop-good .good-img{
  height:180rpx;
  width:180rpx;
  /* border:1px solid red; */
}
.shop-good .good-img image{
  width:100%;
  height:100%;
}
.shop-good .good-des{
  width:420rpx;
  /* border:1px solid red; */
  display:flex;
  flex-flow: column wrap;
  position:relative;
}
.good-title{
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:16px;
  padding-top:10rpx;
  padding-bottom:10rpx;
  font-weight:600;
}
.good-info{
  color:#666;
  font-size:12px;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.good-bottom{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.good-price{
  position:absolute;
  left:0;
  bottom:24rpx;
  color:#d11;
  font-weight:600;
}
/*数量按钮*/
.tui-number-group{
  position:absolute;
  right:0;
  bottom:4rpx;
  width:260rpx;
  height:80rpx;
  /* background-color:lightblue; */
  display:flex;
  justify-content: center;
  align-items: center;
}
.my-btn{
  text-align: center;
  line-height: 50rpx;
  width:50rpx;
  height:50rpx;
  border-radius:10rpx;
  /* border:1px solid #999; */
  background-color:#ddd;
}
.my-count{
  width:64rpx;
  height:50rpx;
  margin:4rpx;
  border:1px solid #000;
  /* background-color:#ddd; */
}
.my-count input{
  text-align: center;
  line-height: 50rpx;
}


