/* pages/searchPage/searchPage.wxss */
page{
  background-color: #eee;
}
.search-box{
  padding:20rpx;
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-start;
  background-color: #875f3f;
}
.input-search{
  height:60rpx;
  width:560rpx;
  padding-left:30rpx;
  background-color: #fff;
}
.btn-search{
  height:60rpx;
  width:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left:20rpx;
  border-radius:4px;
  background-color: #fff;
  color:#666;
}
.tipword{
  padding:20rpx;
}


.today-good{
  display:flex;
  justify-content: space-between
}
.good-img{
  height:220rpx;
  width:220rpx;
  /* border:1px solid red; */
}
.good-img image{
  width:100%;
  height:100%;
}
.good-des{
  width:420rpx;
  /* border:1px solid red; */
  display:flex;
  flex-flow: column wrap;
  position:relative;
}
.good-title{
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:18px;
  padding-top:10rpx;
  padding-bottom:10rpx;
  font-weight:600;
}
.good-info{
  color:#666;
  font-size:13px;
  word-break:break-all
}
.good-price{
  position:absolute;
  left:0;
  bottom:30rpx;
  color:#d11;
  font-weight:600;
}
.searchCount{
  color:red;
}