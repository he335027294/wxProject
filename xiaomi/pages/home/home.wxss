/* pages/home/home.wxss */
.search-link{
  width:100%;
}
.top-search{
  height:100rpx;
  width:100%;
  background-color:#875f3f;
  margin:0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:0 40rpx;
  box-sizing:border-box;
}
.me-search{
  width:100%;
  height:68rpx;
  background-color: white;
  border-radius:34rpx;
  box-sizing:border-box;
  padding-left:40rpx;
  font-size:30rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  color:#999;
}
.me-search>image{
  width:42rpx;
  height:42rpx;
  padding-right:18rpx;
}
/* 轮播图片 */
.slider,.slider swiper,.slider image{
  width:100%;
  height:280rpx; 
}
/*navi*/
.navi{
  padding-top:12rpx;
  padding-bottom:12rpx;
  display:flex;
  flex-wrap:nowrap;
  justify-content: space-between;
  align-items: center;
  height:160rpx;
  width:100%;
}
.navi .navi-item{
  display:flex;
  flex-flow:column nowrap;
  align-items: center;
  width:20%;
  height:100%;
  padding:24rpx;
  overflow:hidden;
  font-size:12px;
  color:#333;
}
.navi .navi-item image{
  width:100%;
  margin-bottom:6rpx;
}
.hongbao,.hongbao image{
  width:100%; 
  height:160rpx;
  padding-bottom:10rpx;
}
.today-good{
  display:flex;
  justify-content: space-between
}
.today-good .good-img{
  height:220rpx;
  width:220rpx;
  /* border:1px solid red; */
}
.today-good .good-img image{
  width:100%;
  height:100%;
}
.today-good .good-des{
  width:420rpx;
  /* border:1px solid red; */
  display:flex;
  flex-flow: column wrap;
  position:relative;
}
.good-title{
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:18px;
  padding-top:10rpx;
  padding-bottom:10rpx;
  font-weight:600;
}
.good-info{
  color:#666;
  font-size:13px;
  word-break:break-all
}
.good-price{
  position:absolute;
  left:0;
  bottom:30rpx;
  color:#d11;
  font-weight:600;
}
