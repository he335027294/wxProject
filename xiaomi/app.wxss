/**app.wxss**/
page{
  font-size:16px;
  font-family: "微软雅黑"；
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 分割块 */
.divider{
  height:20rpx;            /*高度*/
  background:#f1f1f1;   /*灰色背景*/
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1) inset;
}
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;/*两端对齐*/
  align-items: center;
}
.arrow::after{
  content:"";
  width:15rpx;    /*箭头正方形加边框*/
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform: rotate(45deg)
}
/*card右侧更多*/
.more{
  display: flex;
  justify-content: space-between;/*两端对齐*/
  align-items: center;
}
.more::after{
  content:"更多";
  color:#999;
  font-size:14px;
}
/*cell*/
.cell .cell-item{
  background-color:#fff;
  padding:24rpx;
  border-bottom:1px solid #ddd;
}
.cell .cell-item:last-child{
  border-bottom:0;
}
/* search-fit */
.search-fit{
  height:100rpx;
  width:100%;
}

